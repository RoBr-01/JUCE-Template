{
    "version": 3,
    "cmakeMinimumRequired": {
      "major": 3,
      "minor": 10
    },
    "configurePresets": [
      {
        "name": "default",
        "description": "Base configuration for all builds",
        "hidden": true,
        "generator": "Ninja",
        "binaryDir": "${sourceDir}/build/${presetName}",
        "cacheVariables": {
          "CMAKE_CXX_STANDARD": "17",
          "CMAKE_CXX_STANDARD_REQUIRED": "ON"
        }
      },
      {
        "name": "debug",
        "description": "Debug build with no optimizations",
        "inherits": "default",
        "cacheVariables": {
          "CMAKE_BUILD_TYPE": "Debug"
        }
      },
      {
        "name": "release",
        "description": "Release build with optimizations and LTO",
        "inherits": "default",
        "cacheVariables": {
          "CMAKE_BUILD_TYPE": "Release",
          "CMAKE_INTERPROCEDURAL_OPTIMIZATION": "ON"
        }
      }
    ],
    "buildPresets": [
      {
        "name": "build-debug",
        "description": "Build the Debug preset",
        "configurePreset": "debug"
      },
      {
        "name": "build-release",
        "description": "Build the Release preset",
        "configurePreset": "release"
      }
    ]
  }